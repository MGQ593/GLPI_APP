# API GLPI Configuration
# Copiar este archivo como .env.local y completar con los valores reales

GLPI_API_URL=https://your-glpi-server.com/api/v1
GLPI_USERNAME=
GLPI_PASSWORD=
GLPI_CLIENT_ID=
GLPI_CLIENT_SECRET=

# Dominio permitido para validacion de email
ALLOWED_EMAIL_DOMAIN=yourcompany.com

# Configuracion de tiempo de inactividad (en minutos)
SESSION_TIMEOUT_MINUTES=10
SESSION_WARNING_MINUTES=8

# GLPI REST API Configuration (para crear tickets)
GLPI_REST_API_URL=https://your-glpi-server.com/apirest.php
GLPI_APP_TOKEN=
GLPI_USER_TOKEN=

# PostgreSQL Database Configuration
DATABASE_URL=postgres://user:password@host:port/database?sslmode=disable
DATABASE_SCHEMA=ticket_portal

# Webhook GLPI Configuration
WEBHOOK_USER=glpi_webhook
WEBHOOK_SECRET=

# Web Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:support@yourcompany.com

# URL base de la aplicacion
NEXT_PUBLIC_APP_URL=http://localhost:3000

# n8n Webhook para crear tickets
N8N_CREATE_TICKET_WEBHOOK_URL=
